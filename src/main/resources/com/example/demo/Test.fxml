<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="backgroundColor" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.MusicPlayerController">
    <children>

        <Button fx:id="playButton" layoutX="262.0" layoutY="349.0" onAction="#play" prefHeight="25.0" prefWidth="54.0" text="Play" />
        <ListView fx:id="songList" layoutX="30.0" layoutY="50.0" prefHeight="200.0" prefWidth="200.0" />
        <Slider fx:id="volumeSlider" layoutX="436.0" layoutY="354.0" prefWidth="100.0" value="50.0" />
        <ImageView fx:id="albumCover" fitHeight="200.0" fitWidth="200.0" layoutX="370.0" layoutY="50.0" pickOnBounds="true" preserveRatio="true" />
        <Label fx:id="songName" alignment="CENTER" contentDisplay="CENTER" layoutX="375.0" layoutY="260.0">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
        <Label fx:id="ArtistName" alignment="CENTER" contentDisplay="CENTER" layoutX="375.0" layoutY="275.0" />
        <Slider fx:id="timeSlider" layoutX="30.0" layoutY="270.0" prefWidth="300.0" />
        <Label fx:id="durationLabel" layoutX="160.0" layoutY="285.0" />
        <Button layoutX="30.0" layoutY="349.0" mnemonicParsing="false" onAction="#chooseMusic" text="Choose Music" />
        <Button fx:id="nextButton" layoutX="316.0" layoutY="349.0" onAction="#next" prefHeight="25.0" prefWidth="62.0" text="Next" />
        <Button fx:id="previousButton" layoutX="199.0" layoutY="349.0" onAction="#previous" prefHeight="25.0" prefWidth="62.0" text="Previous" />



    </children>
</AnchorPane>
